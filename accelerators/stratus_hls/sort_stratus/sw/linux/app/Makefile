EXTRA_CFLAGS ?=
APPNAME := sort

COH_MODE ?= 0
IS_ESP ?= 1
ITERATIONS ?= 100
SORT_LEN ?= 10
ENABLE_SM ?= 0

EXTRA_CFLAGS += -DCOH_MODE=$(COH_MODE)
EXTRA_CFLAGS += -DIS_ESP=$(IS_ESP)
EXTRA_CFLAGS += -DITERATIONS=$(ITERATIONS)
EXTRA_CFLAGS += -DSORT_LEN=$(SORT_LEN)
EXTRA_CFLAGS += -DENABLE_SM=$(ENABLE_SM)

include $(DRIVERS)/common.mk
